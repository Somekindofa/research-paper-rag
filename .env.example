# Research RAG Environment Variables
# Copy this file to .env and fill in your values

# Jan LLM Server (usually default is fine)
JAN_BASE_URL=http://localhost:1337/v1

# Path to your PDF folder (Better BibTeX export folder)
# Use forward slashes or escaped backslashes
PDF_FOLDER_PATH=C:/Users/YourName/Zotero/storage

# Optional: Override embedding device
# EMBEDDING_DEVICE=cuda

# Optional: Chroma persistence directory
# CHROMA_PERSIST_DIR=data/chroma_db
